{
    "editor.formatOnSave": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.formatOnType": true,
    },
    "black-formatter.args": [
        "--line-length",
        "119",
    ],
    "flake8.args": [
        "max--line-length",
        "119",
    ]
}